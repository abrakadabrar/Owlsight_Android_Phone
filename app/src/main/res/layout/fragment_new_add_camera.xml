<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #323742"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAddCameraGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323742"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/btnEnterCameraMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_yellow_rounded"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/enable_phone_camera_mode"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="@string/mobile_camera_description"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/btnAddIpCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_yellow_rounded"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/add_ip_camera"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="@string/add_ip_camera_description"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
