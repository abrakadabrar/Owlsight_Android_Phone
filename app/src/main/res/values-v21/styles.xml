<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTranslucentCustom" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBar" parent="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large">
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
